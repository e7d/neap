server {
    # Listening interfaces
    listen 80;
    listen 443 ssl;

    # Root folder
    root neap/rtmp/;
    index index.php index.html;

    # Hostname
    server_name rtmp.neap.dev neap;

    # SSL settings
    ssl_protocols TLSv1.2;
    ssl_ciphers "EECDH+ECDSA+AESGCM:EECDH+aRSA+AESGCM:EECDH+ECDSA+SHA384:EECDH+ECDSA+SHA256:EECDH+aRSA+SHA384:EECDH+aRSA+SHA256:EECDH+aRSA+RC4:EECDH:!RC4:!aNULL:!eNULL:!LOW:!3DES:!MD5:!EXP:!PSK:!SRP:!DSS:!AES128";
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    ssl_buffer_size 4k;
    ssl_certificate /etc/ssl/localcerts/self.pem;
    ssl_certificate_key /etc/ssl/localcerts/self.key;
    ssl_dhparam /etc/ssl/private/dhparam.pem;

    # Serve recorded sessions
    location /rec {
        root /var/tmp;
        autoindex on; # directory list accepted
    }

    # Serve HLS fragments
    location /hls {
        root /var/tmp;
        add_header Cache-Control no-cache;
        types {
            application/vnd.apple.mpegurl m3u8;
            video/mp2t ts;
        }
    }

    # Serve DASH fragments
    location /dash {
        root /var/tmp;
        add_header Cache-Control no-cache;
    }

    # RTMP Stats
    location /stats {
        allow 127.0.0.1;
        deny all;

        rtmp_stat all;
    }

    # RTMP Control
    location /control {
        allow 127.0.0.1;
        deny all;

        rtmp_control all;
    }
}
